<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    >
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/desc"
        />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tableLayout1"
        android:layout_centerInParent="true"
        android:layout_marginLeft="16dp"
        android:gravity="center">
        <TableRow
            android:id="@+id/tableRow1"
            android:layout_marginBottom="16dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <Button android:id="@+id/eth2"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:textColor="#f14314"
                android:text="Pharao"/>
            <Button android:id="@+id/blue1"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:textColor="#3c6ff0"
                android:text="Blau Seite"/>
            <Button android:id="@+id/blue2"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:textColor="#3c6ff0"
                android:text="Blau Stirn"/>
        </TableRow>
        <TableRow
            android:id="@+id/tableRow1"
            android:layout_marginBottom="16dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <Button android:id="@+id/eth1"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:textColor="#2cff7a"
                android:text="Boden"/>
            <Button android:id="@+id/red2"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:textColor="#ff3232"
                android:text="Rot Seite"/>
            <Button android:id="@+id/red1"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:textColor="#ff3232"
                android:text="Rot Stirn"/>
        </TableRow>
    </TableLayout>

    <Button android:id="@+id/zsun1"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:textColor="#5c2b33"
        android:text="Deckenlicht"/>
    <Button android:id="@+id/zsun1d"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:textColor="#5c2b33"
        android:text="Deckenlicht 10s"/>

    <TextView android:id="@+id/volt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text=""/>
    <Button android:id="@+id/udp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="epl"/>

</LinearLayout>

